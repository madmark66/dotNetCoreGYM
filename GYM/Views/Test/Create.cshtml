@model GYM.Models.MemberViewModel



@{

    Layout = null;

}



<!DOCTYPE html>



<html>

<head>

    <meta name="viewport" content="width=device-width" />

    <title>Create</title>

</head>

<body>



    <h4>MemberViewModel</h4>

    <hr />

    <div class="row">

        <div class="col-md-4">

            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="Id" class="control-label"></label>

                    <input asp-for="Id" class="form-control" />

                    <span asp-validation-for="Id" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <label asp-for="Name" class="control-label"></label>

                    <input asp-for="Name" class="form-control" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                </div>

                <div class="form-group">

                    <input type="submit" value="Create" class="btn btn-primary" />

                </div>

            </form>

        </div>

    </div>



    <form method="post">

        <div>

            <label for="Name">Name:</label>

            <input type="text" name="Name" value="@Model.Name" />

        </div>

        

        <div>

            <label for="SelectedLessonIds">Lessons:</label>

            @Html.DropDownListFor(m => m.SelectedLessonIds, new SelectList(Model.AvailableLessons), "Select lessons")

        </div>

        

        <div class="form-group">

            <label asp-for="SelectedLessonIds" class="control-label"></label>

            <select asp-for="SelectedLessonIds" asp-items="@(new SelectList(Model.AvailableLessons, "Id", "Name"))"></select>

            @*<span asp-validation-for="LessonName" class="text-danger"></span>*@

        </div>



        <button type="submit">Create</button>

    </form>







    <div>

        <a asp-action="Index">Back to List</a>

    </div>



    @section Scripts {

        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }

    }

    </body>

    </html>