@model GYM.Models.Member

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MemberRankUpdate</title>
</head>
<body>

<h4>Member</h4>
    <font color="red"><h1>學員身分變更</h1></font>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MemberRankUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                    <label>學員ID</label>
               @* <input asp-for="MemberId" class="form-control" />*@
                    <font color="red"><h3>@Html.DisplayFor(model=>model.MemberId)</h3></font>
                    <input type="hidden" name="_ID" value=@Html.DisplayFor(model => model.MemberId) />
                    <input asp-for="MemberId" type="hidden" />
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>


            <div class="form-group">
                    <label>學員名</label>
                @*<input asp-for="MemberName" class="form-control" />*@
                    <font color="red"><h3>@Html.DisplayFor(model=>model.MemberName)</h3></font>
                <span asp-validation-for="MemberName" class="text-danger"></span>
                
            </div>

                <div class="form-group">
                    @*<label asp-for="MemberPassword" class="control-label"></label>*@
                    @*<input asp-for="MemberPassword" class="form-control" />*@
                    <span asp-validation-for="MemberPassword" class="text-danger"></span>
                </div>
            
            <div class="form-group">
                    <label>學員身分別(2:有效學員 3:所有一般學員)</label>
                <input asp-for="MemberRank" class="form-control" />
                <span asp-validation-for="MemberRank" class="text-danger"></span>
            </div>

            <div class="form-group">
                @*<label asp-for="MemberApproved" class="control-label"></label>*@
               @* <input asp-for="MemberApproved" class="form-control" />*@
                <span asp-validation-for="MemberApproved" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="變更身分別" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-controller="Home" asp-action="Index">回首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
