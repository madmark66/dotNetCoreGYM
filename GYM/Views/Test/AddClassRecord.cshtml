@model GYM.ModelsSelect.MemberLessonViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddClassRecord</title>
</head>
<body>

<h4>MemberLessonViewModel</h4>
<font color="red"><h1>新增學員上課紀錄</h1></font>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClassRecord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>學員名</label>
                <select asp-for="MemberId" asp-items="Model.MemberNames"></select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>課程名</label>
                <select asp-for="LessonId" asp-items="Model.LessonNames"></select>
                <span asp-validation-for="LessonId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label>上課日</label>
                    <input type="date" id="ClassDate" name="ClassDate">
                @*<input asp-for="ClassDate" class="form-control" />*@
                <span asp-validation-for="ClassDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="新增上課紀錄" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-controller="Home" asp-action="Index">回首頁</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
